APP_NAME=Pulllog
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:3030
APP_FRONTEND_URL=http://localhost:3000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=pulllog
DB_USERNAME=
DB_PASSWORD=

SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=array
# CACHE_PREFIX=
CACHE_KEY_VERSION=v1

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@pulllog.net"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Demo Users
DEMO_EMAIL=demo@pulllog.net
DEMO_USER_IDS=2

# CORS
CORS_ALLOWED_ORIGINS=https://pull.log:4649,https://pulllog.net
CORS_ALLOWED_METHODS=POST,GET,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Origin,X-Requested-With,Content-Type,Accept,x-api-key,x-csrf-token

API_BASE_URI=/v1
API_KEY=

# Social Login
GOOGLE_CLIENT_ID=xxxxxxxxxxxxxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxxxxxxxxxxxxxxx
GOOGLE_REDIRECT_URI=https://pulllog.net/auth/callback

# Daily Batch Settings
# Where pg_dump binary is located (default: pg_dump on PATH)
PG_DUMP_PATH=pg_dump
# AES-256 encryption key for backup files (optional; keep secret)
BACKUP_ENCRYPTION_KEY=
# How many days to keep backups/reports
RETENTION_DAYS=14
# Top N apps in daily summary
REPORT_TOP_N=10
# Notification email for batch reports
BATCH_NOTIFY_EMAIL=admin@pulllog.net
